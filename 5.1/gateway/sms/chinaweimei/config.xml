<?xml version="1.0" encoding="utf-8"?>
<root>
	<title>维美短信</title>
	<note>官网是：http://www.chinaweimei.com</note>
	<code>
		<account>
			<title>帐号</title>
			<note>维美短信接口账号，不能为空</note>
			<type>text</type>
			<required>true</required>
		</account>
		<password>
			<title>密码</title>
			<note>帐号登录密码</note>
			<type>text</type>
			<required>true</required>
		</password>
		<server>
			<title>请求地址</title>
			<note>即接口请求地址，如：http://cs.chinaweimei.com/wmsms/VerifySms.aspx</note>
			<type>text</type>
			<required>true</required>
		</server>
		<mobile>
			<title>手机号</title>
			<note>填写管理员接收短信要用到的手机号，仅能接受一个手机号</note>
			<type>text</type>
			<required>false</required>
		</mobile>
	</code>
	<manage>
		<balance>
			<title>查余额</title>
			<exec>balance</exec>
			<type>ajax</type>
		</balance>
		<smskey>
			<title>短信关键字</title>
			<exec>smskey</exec>
			<type>page</type>
		</smskey>
		<send>
			<title>发短信</title>
			<exec>sendsms</exec>
			<type>page</type>
		</send>
	</manage>
</root>